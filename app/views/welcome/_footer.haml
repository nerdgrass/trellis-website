.slide.contact
  .row
    .small-12.columns
      %h1.header-display What are you waiting for?
      %h2 Contact Us
    .large-5.columns
      %p Interested in taking your business to the next level? Need counsel on your web presence? Feel like talking shop? We'd love to talk to you! Simply fill out the form to drop us a line, or contact us through the below social media apps.
      .row
        .small-4.columns
          %a{:href => "#"}
            =image_tag "gplus-large.png"
        .small-4.columns
          %a{:href => "#"}
            =image_tag "twitter-large.png"
        .small-4.columns
          %a{:href => "#"}
            =image_tag "linkedin-large.png"
    .large-7.columns
      %form.custom
        .row
          .small-11.small-centered.large-uncentered.large-12.columns
            / .row
            /   .small-3.columns
            /     %label.right.inline{:for => "right-label"} Full Name
            /   .small-9.columns
            %input#right-label{:placeholder => "Your Full Name", :type => "text"}
          .small-11.small-centered.large-uncentered.large-12.columns
            / .row
            /   .small-3.columns
            /     %label.right.inline{:for => "right-label"} Email
            /   .small-9.columns
            %input#right-label{:placeholder => "Your Email Address", :type => "email"}
          .small-11.small-centered.large-uncentered.large-12.columns
            / .row
            /   .small-3.columns
            /     %label.right.inline{:for => "right-label"} Company
            /   .small-9.columns
            %input#right-label{:placeholder => "Company Name", :type => "text"}
          .small-11.small-centered.large-uncentered.large-12.columns
            .row
              .small-2.columns
                %label.right.inline{:for => "right-label"}Budget
              .small-10.columns
                %label.radio-inline{:for => "radio1"}
                  %input#radio1{:name => "radio1", :style => "display:none;", :type => "radio"}
                    %span.custom.radio
                    $5-$10,000
                %label.radio-inline{:for => "radio1"}
                  %input#radio1{:name => "radio1", :style => "display:none;", :type => "radio"}
                    %span.custom.radio
                    $10-$20,000
                %label.radio-inline{:for => "radio1"}
                  %input#radio1{:name => "radio1", :style => "display:none;", :type => "radio"}
                    %span.custom.radio
                    $20-$50,000
          .small-11.small-centered.large-uncentered.large-12.columns
            / .row
            /   .small-3.columns
            /     %label.right.inline Project Description
            /   .small-9.columns
            %textarea{:placeholder => "Project description or message"}
            %button.expand Submit
</div>
